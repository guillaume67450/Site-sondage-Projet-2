@model SondageSite.Models.SondageEtOptions
@{
    Layout = null;
}
<!-- vue renvoyant les résultats du sondage -->
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SondageCreation</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <!---->
    <style>
        #content {
            border: solid 2px black;
            border-radius: 40px;
        }

        #backg {
            background-image: url(../../Content/background-image.png);
            height: 100vh;
            background-size: cover;
        }
    </style>

</head>

<body>
    <div id="backg">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    <h1 id='poll-title' class="mt-5 pt-5">Super Sondage</h1>
                    <h3 id='poll-subtitle' class="mb-5">Le meilleur site pour faire des sondages de qualité</h3>

                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-9" id="content">
                    <div class="row">
                        <div class="mb-3 p-2">
                            @Model.Sondage.Question
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-1">
                            @Model.Pourcentage(0)%
                        </div>
                        <div class="col-4">
                            @Model.Options[0].ReponseTxt
                        </div>
                        <div class="progress bg-white col-2">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @Model.Pourcentage(0)%" aria-valuenow="@Model.Pourcentage(0)" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="col-2">
                            @Model.Options[0].NbVotes vote(s)
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-1">
                            @Model.Pourcentage(1)%
                        </div>
                        <div class="col-4">
                            @Model.Options[1].ReponseTxt
                        </div>
                        <div class="progress bg-white col-2">
                            <div class="progress-bar bg-info" role="progressbar" style="width: @Model.Pourcentage(1)%" aria-valuenow="@Model.Pourcentage(1)" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="col-2">
                            @Model.Options[1].NbVotes vote(s)
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-1">
                            @Model.Pourcentage(2)%
                        </div>
                        <div class="col-4">
                            @Model.Options[2].ReponseTxt
                        </div>
                        <div class="progress bg-white col-2">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: @Model.Pourcentage(2)%" aria-valuenow="@Model.Pourcentage(2)" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="col-2">
                            @Model.Options[2].NbVotes vote(s)
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-1">
                            @Model.Pourcentage(3)%
                        </div>
                        <div class="col-4">
                            @Model.Options[3].ReponseTxt
                        </div>
                        <div class="progress bg-white col-2">
                            <div class="progress-bar" role="progressbar" style="width: @Model.Pourcentage(3)%" aria-valuenow="@Model.Pourcentage(3)" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="col-2">
                            @Model.Options[3].NbVotes vote(s)
                        </div>
                        <br />
                    </div>
                    <div class="row">
                        <div class="col-3"></div>
                        <div class="col-4 mt-3">
                            Total : @Model.Sondage.CountVotes() votes, @Model.Sondage.CountVotants() votants
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
